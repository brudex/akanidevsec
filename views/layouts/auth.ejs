    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - DevSecOps Portal</title>
    
    <!-- Core Stylesheets -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
