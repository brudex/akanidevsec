<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Create New Project</h5>
                </div>
                <div class="card-body">
                    <% if (messages.error) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= messages.error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>

                    <form id="projectForm" class="needs-validation" novalidate>
                        <div class="mb-4">
                            <label for="projectName" class="form-label">
                                Project Name <span class="text-danger">*</span>
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" 
                                   title="A unique name to identify your project"></i>
                            </label>
                            <input type="text" 
                                   class="form-control" 
                                   id="projectName" 
                                   name="projectName" 
                                   required
                                   placeholder="e.g., DevSecOps Portal"
                                   pattern="^[a-zA-Z0-9\s\-_]{3,50}$">
                            <div class="invalid-feedback">
                                Project name must be 3-50 characters long and can contain letters, numbers, spaces, hyphens, and underscores.
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="description" class="form-label">
                                Description
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" 
                                   title="A brief description of your project"></i>
                            </label>
                            <textarea class="form-control" 
                                      id="description" 
                                      name="description" 
                                      rows="3"
                                      placeholder="Describe your project..."></textarea>
                        </div>

                        <div class="mb-4">
                            <label for="developers" class="form-label">
                                Developers
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" 
                                   title="Select team members who will work on this project"></i>
                            </label>
                            <select class="form-select" id="developers" name="developers" multiple>
                                <!-- Options will be populated dynamically -->
                            </select>
                            <div class="form-text">Hold Ctrl/Cmd to select multiple developers</div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-light" onclick="location.href='/projects'">
                                Cancel
                            </button>
                            <button type="submit" class="btn btn-primary">
                                Create Project
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>