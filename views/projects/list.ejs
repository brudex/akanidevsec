<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Projects</h1>
        <a href="/projects/create" class="btn btn-primary">
            <i class="fas fa-plus"></i> New Project
        </a>
    </div>

    <% if (messages.success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= messages.success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <div class="row">
        <% if (projects && projects.length > 0) { %>
            <% projects.forEach(project => { %>
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0"><%= project.projectName %></h5>
                                <span class="badge bg-<%= ['primary', 'info', 'warning', 'danger', 'success'][project.projectStatus] %>">
                                    <%= ['DEVELOPMENT', 'TESTING', 'UAT', 'CAB-APPROVAL', 'PRODUCTION'][project.projectStatus] %>
                                </span>
                            </div>
                            <p class="card-text text-muted small mb-2">
                                <i class="fas fa-link"></i> 
                                <a href="<%= project.gitlabUrl %>" target="_blank" class="text-decoration-none">
                                    <%= project.gitlabUrl %>
                                </a>
                            </p>
                            <p class="card-text"><%= project.description || 'No description provided' %></p>
                            <div class="mt-3">
                                <small class="text-muted">
                                    <i class="fas fa-microchip"></i> 
                                    <%= project.services ? project.services.length : 0 %> Services
                                </small>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="/projects/<%= project.uuid %>" class="btn btn-sm btn-outline-primary">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="fas fa-project-diagram fa-3x text-muted mb-3"></i>
                    <h5>No Projects Yet</h5>
                    <p class="text-muted">Create your first project to get started</p>
                    <a href="/projects/create" class="btn btn-primary">
                        Create Project
                    </a>
                </div>
            </div>
        <% } %>
    </div>
</div>